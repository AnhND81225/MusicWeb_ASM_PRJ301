    <?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <!-- Database connection settings -->
        <property name="hibernate.connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
        <!-- Thay YourDatabaseName bằng tên database thực tế của bạn -->
        <property name="hibernate.connection.url">jdbc:sqlserver://localhost:1433;databaseName=YourDatabaseName;encrypt=false</property>
        <property name="hibernate.connection.username">sa</property>
        <property name="hibernate.connection.password">12345</property>

        <!-- SQL dialect -->
        <property name="hibernate.dialect">org.hibernate.dialect.SQLServer2012Dialect</property>

        <!-- Hiện SQL ra console -->
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>

        <!-- Tự động tạo/cập nhật bảng: validate | update | create | create-drop -->
        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- Mapping entity classes: chỉnh lại package.class tương ứng project của bạn -->
        <!-- Ví dụ: <mapping class="your.package.Doctor"/> -->
        <!-- <mapping class="your.package.Doctor"/> -->
        <!-- <mapping class="your.package.Patient"/> -->
    </session-factory>
</hibernate-configuration>

